package week04;

public class MarbleGame {
	public static void main(String[] args) {
		Child ch1 = new Child(15, "어린이 1");	//구슬 15개 보유
		Child ch2 = new Child(9, "어린이 1");		//구슬 9개 보유
		
		ch1.show();
		ch2.show();
		
		System.out.println();
		System.out.println("1차 게임");
		//Game1
		ch1.win(ch2, 2);
		ch1.show();
		ch1.show();
		
		System.out.println();
		System.out.println("2차 게임");
		//Game2
		ch2.win(ch1, 7);
		ch1.show();
		ch1.show();
	}
}
